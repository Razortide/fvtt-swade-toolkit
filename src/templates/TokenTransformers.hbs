<style>
#tokenTransformerMenu{
  display:flex;
  flex-direction: column;
  background: rgba(0,0.0,0.6);
  height: 300px;
  width: 300px;
  position: fixed;
  bottom: 60px;
  left: 800px;
  box-shadow: 0 0 15px #000;
  border: 1px solid #333;
  border-radius: 8px;
}

#tokenTransformerMenu .addTransformer{
  flex:1;
  text-align: center;
  vertical-align: bottom;
}

#tokenTransformerMenu .transformerList{
  flex: 9;
  display:flex;
  flex-direction: column;
  overflow: scroll;
  font-size: 14px;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

#tokenTransformerMenu .transformerRow{
  display:flex;
  padding: 5px;
}
</style>

<div id="tokenTransformerMenu">
  <div class="addTransformer">
    <i id="addTransformerButton" class="fas fa-plus"></i>
  </div>
  <div class="transformerList">
    {{#each triggers}}
      {{#each this}}
      <div class="transformerRow" id="{{@../key}}-{{this.name}}-row">
        <span style="flex:7">{{@../key}}: {{this.name}}</span>
        <i style="flex:1" class="fa fa-question" title="{{localize 'SWADE_Handlers.Info'}}" id="info-{{@../key}}-{{this.name}}"></i>
        {{#if this.isActive}}
        <i style="flex:1;color:lime" class="fa fa-power-off" title="{{localize 'SWADE_Handlers.Disable'}}" id="active-{{@../key}}-{{this.name}}"></i>
        {{else}}
        <i style="flex:1;color:#CCC" class="fa fa-power-off" title="{{localize 'SWADE_Handlers.Enable'}}" id="active-{{@../key}}-{{this.name}}"></i>
        {{/if}}
        <i style="flex:1" class="fa fa-trash" title="{{localize 'SWADE_Handlers.Delete'}}" id="delete-{{@../key}}-{{this.name}}"></i>
      </div>
      {{/each}}
    {{/each}}
  </div>
</div>
