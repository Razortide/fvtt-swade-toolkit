<div style="display:flex;flex-direction:column">
  <h2>
    <span style="flex:4">{{localize "SWADETOOLKIT.TableNames"}}</span>
    <span style="flex:1;float:right">{{localize "SWADETOOLKIT.DrawTimes"}}</span>
  </h2>
  {{#each rollTables}}
    <div style="display:flex">
      <span style="flex:4">{{this.name}}</span>
      <input id="{{this.id}}" value={{this.value}} style="width:25px;float:right;flex:1" type="number"></input>
    </div>
  {{/each}}
</div>