<style>
.description-container{
  display: flex;
  flex-direction: column;
  padding: 5px;
}
.description-container .div{
  padding:5px;
}

</style>
<div>
  <h1>{{this.transformer.name}}</h1>
  <div class="description-container">
    <div style="display:flex">
      <p style="flex:1">{{localize "Automation.Description"}}:</p>
      <p style="flex:1"></p>
      <p style="flex:6">{{this.transformer.description}}</p>
    </div>
    <div style="display:flex">
      <p style="flex:1">{{localize "Automation.Trigger"}}</p>
      <p style="flex:1"></p>
      <p style="flex:6">{{this.trigger}}</p>
    </div>
    <div style="display:flex">
      <p style="flex:1">{{localize "Automation.Execute_Order"}}</p>
      <p style="flex:1"></p>
      <p style="flex:6">{{this.transformer.execOrderNum}}</p>
    </div>
    <div style="display:flex">
      <p style="flex:1">{{localize "Automation.Duration"}}</p>
      <p style="flex:1"></p>
      <p style="flex:6">{{this.transformer.duration}}</p>
    </div>
    <div style="display:flex">
      <p style="flex:1">{{localize "Automation.Function"}}</p>
      <p style="flex:1"></p>
      <textarea style="flex:6">{{this.transformer.transform}}</textarea>
    </div>
  </div>
